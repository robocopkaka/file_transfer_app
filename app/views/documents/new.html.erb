<%= form_for @document, html: { class: "upload-document" } do |f| %>
  <%= render 'shared/error_mesaages', document: @document %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :file %>
    <%= f.file_field :file, class: 'form-control-file' %>
  </div>

  <div class="form-group">
    <%= f.submit "Upload file", class: 'btn btn-primary' %>
  </div>
<% end %>